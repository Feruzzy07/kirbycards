mixin cardForm(card, actionURL, mode, title)

    div.form-panel
        div.header=title
            form(action=actionURL method='post')
                div.form-input
                    label(for='name') Name:
                    input(autocomplete='off' id='name' name='name' value=card.name)
                div.form-input
                    label(for='cost') Cost:
                    input(id='cost' name='cost' autocomplete='off' value=card.cost)
                div.form-input
                    label(for='cardimg') Card image URL:
                    input(id='cardimg' name='cardimg' type='text' value=card.cardimg)
                div.form-input
                    label(for='stat1img') Stat 1 Image URL:
                    input(id='stat1img' name='stat1img' type='text' value=card.stat1img)
                div.form-input
                    label(for='stat2img') Stat 2 Image URL:
                    input(id='stat2img' name='stat2img' type='text' value=card.stat2img)
                div.form-input
                    label(for='stat3img') Stat 3 Image URL:
                    input(id='stat3img' name='stat3img' type='text' value=card.stat3img)
                div.form-input
                    label(for='tribe1img') Tribe 1 Image URL:
                    input(id='tribe1img' name='tribe1img' type='text' value=card.tribe1img)
                div.form-input
                    label(for='tribe2img') Tribe 2 Image URL:
                    input(id='tribe2img' name='tribe2img' type='text' value=card.tribe2img)
                div.form-input
                    label(for='description') Description:
                    textarea(id='description' name='description') #{card.description}
                div.form-input
                    label(for='dmg') Damage:
                    input(id='dmg' name='dmg' type='text' value=card.dmg)
                div.form-input
                    label(for='rarityimg') Rarity Image URL
                    input(id='rarityimg' name='rarityimg' type='text' value=card.rarityimg)
                div.form-input
                    label(for='hp') Health Points:
                    input(id='hp' name='hp' type='text' value=card.hp)
                div.form-input
                    label(for='rarity') Rarity:
                    select(id='rarity' name='rarity' autocomplete='off')
                        each rarity in rarities
                            option(value=rarity selected = (rarity===card.rarity)) #{rarity}
                div.button-row
                    a.button.cancel(href='/crafting') Cancel
                    if(mode==='edit')
                        a.button.delete(href=`/delete/${card.id}`) Delete
                    button.button.save(type='submit') Submit