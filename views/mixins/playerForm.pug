mixin playerForm(player, saveUrl, cancelUrl)

    div.form-container
        form(action=saveUrl method='post')
            div.form-input
                label(for='username') Username
                input(id='username' name='username' value=player.username)

            div.form-input
                label(for='password') Password
                input(id='password' name='password' value=player.password)

            div.form-input
                label(for='email') Email
                input(id='email' name='email' value=player.email)

            div.form-buttons
                a.button(href=cancelUrl) Cancel
                button.button(type='submit') Save