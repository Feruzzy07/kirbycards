extends layout1

block content
    include mixins/monsterCard
    div.container
        form(action='/crafting' method='get')
            div.form-input
                label(for='rarity') Rarity
                select(id='rarity' name='rarity' autocomplete='off')
                    each rarity in rarities
                        option(value=rarity selected = (rarity===searchRarity)) #{rarity}
                div.form-input
                    label(for='random') Random
                    input(type='checkbox' name='random' id='random' checked=searchRandom)
            button.button.save(type='submit') Filter
        div.add-button-row
            a.button.save(href="/add") Add Card
    div.container
        each card in cards
            +monsterCard(card)
